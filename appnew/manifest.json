{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://www.facebook.com/*"],
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "options_ui": {
      "page": "options.html",
      "chrome_style": true,
      "open_in_tab": true
    },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "storage"
  ]
}
